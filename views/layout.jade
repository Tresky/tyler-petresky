//- layout.jade

doctype html
html
    head
        title Tyler Petresky

        link(rel='stylesheet', href='./css/vendor/bootstrap.css')
        link(rel='stylesheet', href='./css/vendor/bootstrap-theme.css')
        link(rel='stylesheet', href='./css/main.css')

        link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans')
        link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Maven+Pro')
        link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Rokkitt')
        link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Montserrat')
    body
        #homepage.parallax-window(data-parallax='scroll', data-image-src='./img/index4_bg.jpg')
            span.mask-overlay
            include ./includes/navbar.jade

            .container
                .row
                    section.col-md-8(class=['col-md-offset-2', 'intro-statement'])
                        .intro-head
                            .intro-line-1
                                span Hello. I am
                            .intro-line-2
                                span @tylerpetresky
                        a.contact-button(href='#contact') Contact Me

        include ./includes/about.jade

        //- Projects Section
        section#projects.wrapper(class=['wrapper-background-alt'])
            .container
                .row
                    //- Section Header
                    .section-header
                        h1 My Projects

        section.bg1.parallax-window(data-parallax='scroll', data-image-src='../img/bg2.jpg')
            span.mask-overlay

        //- Resume Section
        section#resume.wrapper
            .container
                .row
                    //- Section Header
                    .section-header
                        h1 My Resume

        //- Tools Section
        section#tools.wrapper(class=['wrapper-background-alt'])
            .container
                .row
                    //- Section Header
                    .section-header
                        h1 My Tools

        //- Contact Section
        section#contact.wrapper
            .container
                .row
                    //- Section Header
                    .section-header
                        h1 Say Something Friendly
                    .section-body
                        .row
                            .col-md-6
                                .form-horizontal
                                    .form-group
                                        label.col-md-2.control-label(for='first-name-field') Name
                                        .col-md-5
                                                input#first-name-field.form-control(type='text', placeholder='First Name')
                                        .col-md-5
                                                input#last-name-field.form-control(type='text', placeholder='Last Name')
                                    .form-group
                                        label.col-md-2.control-label(for='email-field') Email
                                        .col-md-10
                                            input#email-field.form-control(type='email', placeholder='Email Address')
                                    .form-group
                                        label.col-md-2.control-label(for='subject-field') Subject
                                        .col-md-10
                                            input#subject-field.form-control(type='text', placeholder='Subject')
                                    .form-group
                                        label.col-md-2.control-label(for='message-field') Message
                                        .col-md-10
                                            textarea#message-field.form-control(rows='5', placeholder='What is your message?')
                                hr
                                .form-horizontal
                                    .form-group
                                        label.col-md-2.control-label Email
                                        .col-md-10
                                            p.form-control-static hello@tylerpetresky.com
                                    .form-group
                                        label.col-md-2.control-label Phone
                                        .col-md-10
                                            p.form-control-static 850.572.7440

                            .col-md-6
                                img.img-responsive(src='./img/head-contact0.png')


        script(src='./js/vendor/jquery-2.1.3.js')
        script(src='./js/vendor/bootstrap.js')
        script(src='//cdn.jsdelivr.net/jquery.scrollto/2.1.0/jquery.scrollTo.min.js')
        script(src='//cdn.jsdelivr.net/jquery.localscroll/1.4.0/jquery.localScroll.min.js')
        script(src='./js/plugins.js')
        script(src='./js/main.js')