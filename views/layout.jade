        link(rel='stylesheet', href='//cdn.jsdelivr.net/fontawesome/4.3.0/css/font-awesome.min.css')

    body(data-spy='scroll', data-target='')
        include ./includes/navbar-2.jade 
        #homepage.parallax-window(data-parallax='scroll', data-image-src='./img/bg0-p.jpg')
            span.mask-overlay
            include ./includes/navbar.jade

            .container
                .row
                    section.col-md-8(class=['col-md-offset-2', 'intro-statement'])
                        .intro-head
                            .intro-line-1
                                span Hello. I am
                            .intro-line-2
                                span @tylerpetresky
                        .row
                            p.h4.hover-line Web Developer 
                            p.h4(style='color: white; display: inline;') / 
                            p.h4.hover-line Computer Engineer
                        a.contact-button(href='#contact') Contact Me                       

        include ./includes/about.jade

        section.bg1.parallax-window(data-parallax='scroll', data-image-src='../img/bg1-p.jpg')
            span.mask-overlay

        include ./includes/play.jade

        section.bg1.parallax-window(data-parallax='scroll', data-image-src='../img/bg2-p.jpg')
            span.mask-overlay

        include ./includes/work.jade

        section.bg1.parallax-window(data-parallax='scroll', data-image-src='../img/bg3-p.jpg')
            span.mask-overlay

        include ./includes/tools.jade

        include ./includes/contact.jade

        include ./includes/footer.jade


