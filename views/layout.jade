        script(src='//cdn.jsdelivr.net/jquery.scrollto/2.1.0/jquery.scrollTo.min.js')
        script(src='//cdn.jsdelivr.net/jquery.localscroll/1.4.0/jquery.localScroll.min.js')
        script(src='//cdn.jsdelivr.net/jquery.waypoints/2.0.5/waypoints.min.js')
        script(src='https://platform.twitter.com/widgets.js')
        script(src='https://cdn.socket.io/socket.io-1.2.0.js')
        script(src='./js/plugins.js')
        script(src='./js/main.js')